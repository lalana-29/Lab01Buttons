<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android2="http://schemas.android.com/apk/res/android"
    xmlns:tools2="http://schemas.android.com/tools"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    tools2:context=".MainActivity"
    android:id="@+id/gacha_screen">


    <TextView
        android:id="@+id/gacha_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app2:layout_constraintRight_toRightOf="parent"
        app2:layout_constraintLeft_toLeftOf="parent"
        app2:layout_constraintBottom_toTopOf="@id/roll"
        android:text="Click to roll the gacha!"
        android:textSize="75px"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="roll"
        android:textSize="50px"
        android:id="@+id/roll"
        app2:layout_constraintRight_toRightOf="parent"
        app2:layout_constraintLeft_toLeftOf="parent"
        app2:layout_constraintBottom_toBottomOf="parent"
        app2:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>